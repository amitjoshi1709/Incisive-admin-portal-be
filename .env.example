# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-password
DB_NAME=postgres
DB_SSL=false
# Note: URL-encode special characters in password (@ = %40, # = %23, etc.)
DATABASE_URL="postgresql://postgres:your-password@127.0.0.1:5432/postgres?schema=public"

# JWT
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# AdminJS
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
SESSION_SECRET=super-secret-session-key-change-in-production
